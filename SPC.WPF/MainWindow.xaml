<Window x:Class="SPC.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPC.WPF"
        xmlns:view="clr-namespace:SPC.WPF.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel 
        HorizontalAlignment="Left" 
        VerticalAlignment="Top">
        <view:BitDeviceContainer 
            HorizontalAlignment="Left"
            DataContext="{Binding DeviceListViewModel.RecvBitDevices}"/>
        <view:BitDeviceContainer 
            HorizontalAlignment="Left"
            DataContext="{Binding DeviceListViewModel.SendBitDevices}"/>
        <view:WordDeviceContainer 
            HorizontalAlignment="Left"
            DataContext="{Binding DeviceListViewModel.WordDevices}"/>
    </StackPanel>
</Window>
